{
    "preset": "laravel",
    "rules": {
        "not_operator_with_successor_space": false,
        "class_definition": {
            "inline_constructor_arguments": true,
            "single_item_single_line": true
        },
        "yoda_style": {
            "equal": false,
            "identical": false,
            "less_and_greater": false
        },
        "phpdoc_align": {
            "align": "left"
        }
    }
}
